{
    "name": "ehsunm0radi/weight-conversions",
    "description": "Weight conversions in php",
    "keywords": [
        "EhsunM0radi",
        "weight-conversions"
    ],
    "homepage": "https://github.com/ehsunm0radi/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Ehsan Moradi",
            "email": "eh3unm0radi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "EhsunM0radi\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EhsunM0radi\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
